= simple_form_for @attendance_rate, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.error_span :name
  = f.input :rate
  = f.error_span :rate
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), attendance_rates_path, :class => 'btn btn-default'
