- model_class = AttendanceRate
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @attendance_rate.name
%p
  %strong= model_class.human_attribute_name(:rate) + ':'
  %br
  = @attendance_rate.rate
%p
  %strong= model_class.human_attribute_name(:tenant_id) + ':'
  %br
  = @attendance_rate.tenant_id


= link_to t('.back', :default => t("helpers.links.back")), attendance_rates_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_attendance_rate_path(@attendance_rate), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), attendance_rate_path(@attendance_rate), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
