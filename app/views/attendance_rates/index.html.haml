- model_class = AttendanceRate
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:rate)
      %th= model_class.human_attribute_name(:tenant_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @attendance_rates.each do |attendance_rate|
      %tr
        %td= link_to attendance_rate.id, attendance_rate_path(attendance_rate)
        %td= attendance_rate.name
        %td= attendance_rate.rate
        %td= attendance_rate.tenant_id
        %td=l attendance_rate.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_attendance_rate_path(attendance_rate), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), attendance_rate_path(attendance_rate), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_attendance_rate_path, :class => 'btn btn-primary'
