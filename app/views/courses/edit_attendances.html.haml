.page-header
  %h1
    Edit course attendances
    = link_to 'Show course', course_path(@course), class: 'navbar-link btn btn-primary'
    /= link_to 'All courses', courses_path, class: 'navbar-link btn btn-primary'
    %p
    = @course.name
= simple_form_for @course do |f|
  = f.error_notification
  = f.button :submit, class: "btn btn-info add-button"
  .row
    %h3 Events
    #tasks
      = f.simple_fields_for :events do |event|
        = render 'event_fields', f: event
      .links.container
        = link_to_add_association '+ Add event', f, :events, class: "btn btn-info add-button"
