- model_class = Course
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:product_id)
      %th= model_class.human_attribute_name(:attr1_id)
      %th= model_class.human_attribute_name(:attr2_id)
      %th= model_class.human_attribute_name(:attr3_id)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @courses.each do |course|
      %tr
        %td= link_to course.name, course
        %td= course.product_id
        %td= course.attr1_id
        %td= course.attr2_id
        %td= course.attr3_id
        %td
          = link_to '1-Course', edit_course_path(course), class: 'btn btn-default btn-xs'
          = link_to '2-Enrollments', edit_course_path(course), class: 'btn btn-default btn-xs'
          = link_to '3-Events', edit_course_path(course), class: 'btn btn-default btn-xs'
          = link_to '4-Attendances', edit_course_path(course), class: 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), course, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_course_path, :class => 'btn btn-primary'                            |