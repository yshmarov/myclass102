= simple_form_for [@tenant, @course], :html => { :class => "form-horizontal course" } do |f|
  = f.input :name, :class => 'form-control'
  = f.error_span(:name)
  = f.input :product_id, :class => 'form-control'
  = f.error_span(:product_id)
  = f.input :attr1_id, :class => 'form-control'
  = f.error_span(:attr1_id)
  = f.input :attr2_id, :class => 'form-control'
  = f.error_span(:attr2_id)
  = f.input :attr3_id, :class => 'form-control'
  = f.error_span(:attr3_id)
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), root_url, :class => 'btn btn-default'
  %h3 Events
  #tasks
    = f.simple_fields_for :events do |event|
      = render 'event_fields', f: event
    .links.container
      = link_to_add_association '+ Add event', f, :events, class: "btn btn-info add-button"