/- set_var 'events', @events.map{|e| {title: e.event.starts_at, start: e.starts_at, end: e.ends_at}}
- set_var 'events', @events.map{|e| {title: e.room.name, start: e.starts_at, end: e.ends_at}}

- model_class = Event
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:starts_at)
      %th= model_class.human_attribute_name(:room_id)
      %th= model_class.human_attribute_name(:member)
      %th= model_class.human_attribute_name(:course_id)
      %th= model_class.human_attribute_name(:tenant_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @events.each do |event|
      %tr
        %td= event.starts_at
        %td= event.room
        %td= event.member
        %td= event.course
        %td= event.tenant_id
        %td= event.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(event), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

.well
  %div#calendar
