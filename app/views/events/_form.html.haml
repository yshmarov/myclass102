= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :starts_at
  = f.association :room
  = f.association :user
  = f.input :course_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn btn-default'
