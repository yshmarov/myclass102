!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
          %title= content_for?(:title) ? yield(:title) : "MyClass102"
          = csrf_meta_tags
          = stylesheet_link_tag "application", :media => "all"
          = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
          = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
          = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
          = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
          = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
          = javascript_include_tag "application"
  %body
    .navbar.navbar-default.navbar-static-top
      .container
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "/"}
          \#MyClass102
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            - if current_user
              = link_to 'Members', members_path, class: 'btn btn-primary sign-up'
              /= link_to 'Courses', tenant_courses_path(tenant_id: @tenant.id), class: 'btn btn-primary sign-up'
              = link_to 'Events', events_path, class: 'btn btn-primary sign-up'
              = link_to 'Attendances', attendances_path, class: 'btn btn-primary sign-up'
              = link_to 'AttendanceRates', attendance_rates_path, class: 'btn btn-primary sign-up'
              = link_to 'Enrollments', enrollments_path, class: 'btn btn-primary sign-up'
              = link_to 'Attr1s', attr1s_path, class: 'btn btn-primary sign-up'

              = link_to 'Offices', offices_path, class: 'btn btn-primary sign-up'
              = link_to 'Rooms', rooms_path, class: 'btn btn-primary sign-up'
              = link_to 'Clients', clients_path, class: 'btn btn-primary sign-up'
              = link_to current_user.username, edit_user_registration_path, class: 'btn btn-primary sign-up fa fa-user'
              = link_to 'Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-primary sign-up btn-danger'
            - else
              %li.col-md-4.pull-right
                = link_to('Sign In', new_user_session_path, class: 'btn btn-primary', title: 'Sign In')
    .container
      .row
        .col-lg-12
          = bootstrap_flash
          = yield
          = rjv_tags
      %footer
