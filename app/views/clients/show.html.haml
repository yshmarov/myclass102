- model_class = Client
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @client.first_name
%p
  %strong= model_class.human_attribute_name(:middle_name) + ':'
  %br
  = @client.middle_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @client.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @client.email
%p
  %strong= model_class.human_attribute_name(:tel1) + ':'
  %br
  = @client.tel1
%p
  %strong= model_class.human_attribute_name(:tel2) + ':'
  %br
  = @client.tel2
%p
  %strong= model_class.human_attribute_name(:dob) + ':'
  %br
  = @client.dob
%p
  %strong= model_class.human_attribute_name(:sex) + ':'
  %br
  = @client.sex
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @client.address
%p
  %strong= model_class.human_attribute_name(:lead_source_id) + ':'
  %br
  = @client.lead_source_id
%p
  %strong= model_class.human_attribute_name(:tenant_id) + ':'
  %br
  = @client.tenant_id


= link_to t('.back', :default => t("helpers.links.back")), clients_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_client_path(@client), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), client_path(@client), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
