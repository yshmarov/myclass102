= simple_form_for @attr3, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.error_span :name
  = f.input :tenant_id
  = f.error_span :tenant_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), attr3s_path, :class => 'btn btn-default'
