- model_class = Attendance
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:event_id) + ':'
  %br
  = @attendance.event_id
%p
  %strong= model_class.human_attribute_name(:client_id) + ':'
  %br
  = @attendance.client_id
%p
  %strong= model_class.human_attribute_name(:attendance_rate_id) + ':'
  %br
  = @attendance.attendance_rate_id
%p
  %strong= model_class.human_attribute_name(:tenant_id) + ':'
  %br
  = @attendance.tenant_id


= link_to t('.back', :default => t("helpers.links.back")), attendances_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_attendance_path(@attendance), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), attendance_path(@attendance), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
