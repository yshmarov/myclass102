- model_class = Attendance
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th Event
      %th Client
      %th Rate
      %th Starts at
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @attendances.each do |attendance|
      %tr
        %td= attendance.event_id
        %td= attendance.client_id
        %td= attendance.attendance_rate_id
        %td= attendance.startz
        %td= attendance.endz
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_attendance_path(attendance), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), attendance_path(attendance), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

/- set_var 'events', @attendances.map{|e| {start: e.startz, end: e.endz}}
/.well
/%div#calendar
