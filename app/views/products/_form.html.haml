= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.error_span :name
  = f.input :event_quantity
  = f.error_span :event_quantity
  = f.input :event_length
  = f.error_span :event_length
  = f.input :member_price
  = f.error_span :member_price
  = f.input :client_price
  = f.error_span :client_price
  = f.input :gtype
  = f.error_span :gtype
  = f.input :ctype
  = f.error_span :ctype
  = f.input :is_active
  = f.error_span :is_active
  = f.input :product_type_id
  = f.error_span :product_type_id
  = f.input :tenant_id
  = f.error_span :tenant_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn btn-default'
