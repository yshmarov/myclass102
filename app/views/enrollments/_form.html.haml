= simple_form_for @enrollment, :html => { :class => 'form-horizontal' } do |f|
  = f.association :course
  = f.error_span :course_id
  = f.association :client
  = f.error_span :client_id
  = f.input :member_id
  = f.error_span :member_id
  = f.input :coupon_id
  = f.error_span :coupon_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), enrollments_path, :class => 'btn btn-default'
