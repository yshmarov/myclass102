- model_class = Office
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @office.name
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @office.address
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @office.email
%p
  %strong= model_class.human_attribute_name(:tel) + ':'
  %br
  = @office.tel

= link_to t('.back', :default => t("helpers.links.back")), offices_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_office_path(@office), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), office_path(@office), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
