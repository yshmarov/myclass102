- model_class = Attr1
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @attr1.name
%p
  %strong= model_class.human_attribute_name(:tenant_id) + ':'
  %br
  = @attr1.tenant_id


= link_to t('.back', :default => t("helpers.links.back")), attr1s_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_attr1_path(@attr1), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), attr1_path(@attr1), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
