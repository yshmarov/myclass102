- model_class = Attr1
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:tenant_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @attr1s.each do |attr1|
      %tr
        %td= link_to attr1.id, attr1_path(attr1)
        %td= attr1.name
        %td= attr1.tenant_id
        %td=l attr1.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_attr1_path(attr1), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), attr1_path(attr1), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_attr1_path, :class => 'btn btn-primary'
